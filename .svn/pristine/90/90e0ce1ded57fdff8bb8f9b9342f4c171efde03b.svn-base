<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finish_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_4"
    tools:context="edu.wm.cs.cs301.amazebyeyosyas.ui.FinishActivity">

    <TextView
        android:text="@string/congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/congratulations_textView"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/youWon_textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/energy_consumption_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/energyConsumtionNum_textView"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/energyConsumption_textView"
        android:layout_alignBottom="@+id/energyConsumption_textView"
        android:layout_alignEnd="@+id/youWon_textView"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="@string/you_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/youWon_textView"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/energy_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/energyConsumption_textView"
        android:textSize="18sp"
        android:layout_above="@+id/playAgain_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:text="@string/path_length_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pathLengthNum_textView"
        android:textSize="18sp"
        android:layout_marginEnd="10dp"
        android:layout_above="@+id/energyConsumtionNum_textView"
        android:layout_alignEnd="@+id/energyConsumption_textView"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="@string/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAgain_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="@string/path_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pathLength_textView"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/pathLengthNum_textView"
        android:layout_alignBottom="@+id/pathLengthNum_textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
